@model Werkcollege04.Oef01.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                @foreach (var item in Enum.GetValues(typeof(Job)))
                {
                    <div class="radio">
                        <label>
                            <input type="radio" asp-for="Job" value="@item">
                            @item
                        </label>
                    </div>
                }
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mgr" class="control-label"></label>
                <select asp-for="Mgr" asp-items="ViewBag.Managers" class="form-control">
                    <option value="@null">No manager</option>
                </select>
                <span asp-validation-for="Mgr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deptno" class="control-label"></label>
                <select asp-for="Deptno" asp-items="ViewBag.Departments" class="form-control"></select>
                <span asp-validation-for="Deptno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hiredate" class="control-label"></label>
                <input asp-for="Hiredate" class="form-control" />
                <span asp-validation-for="Hiredate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commission" class="control-label"></label>
                <input asp-for="Commission" class="form-control" />
                <span asp-validation-for="Commission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
